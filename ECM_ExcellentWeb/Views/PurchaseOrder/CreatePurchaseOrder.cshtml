@model ECM_ExcellentWeb.Models.VM.PurchaseOrderCreateVM

<form asp-action="CreatePurchaseOrder">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Purchase Information:</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="PurchaseOrder.CompanyId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <select asp-for="PurchaseOrder.CompanyId" class="form-select" asp-items="@Model.CompanyList">
                    <option disabled selecte>--Select Company--</option>
                </select>
                <span asp-validation-for="PurchaseOrder.CompanyId" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="PurchaseOrder.SupplierId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <select asp-for="PurchaseOrder.SupplierId" class="form-select" asp-items="@Model.SupplierList">
                    <option disabled selecte>--Select Supplier--</option>
                </select>
                <span asp-validation-for="PurchaseOrder.SupplierId" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="PurchaseOrder.ProductId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <select asp-for="PurchaseOrder.ProductId" class="form-select" asp-items="@Model.ProductList">
                    <option disabled selecte>--Select Product--</option>
                </select>
                <span asp-validation-for="PurchaseOrder.ProductId" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="PurchaseOrder.PO_Date" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="PurchaseOrder.PO_Date" class="form-control" />
                <span asp-validation-for="PurchaseOrder.PO_Date" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="PurchaseOrder.PO_Invoice" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="PurchaseOrder.PO_Invoice" class="form-control" />
                <span asp-validation-for="PurchaseOrder.PO_Invoice" class="text-danger"></span>
            </div>

        </div>

        <h1 class="text-primary">Product Details:</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="PurchaseOrder.Id" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="PurchaseOrder.Id" class="form-control" />
                <span asp-validation-for="PurchaseOrder.Id" class="text-danger"></span>
            </div>

            

            <div class="col-2">
                <label asp-for="Product.QtyPerUnit" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Product.QtyPerUnit" class="form-control" />
                <span asp-validation-for="Product.QtyPerUnit" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Product.RetailerPrice" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Product.RetailerPrice" class="form-control" />
                <span asp-validation-for="Product.RetailerPrice" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Product.CostPrice" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="Product.CostPrice" class="form-control" rows="5" />
                <span asp-validation-for="Product.CostPrice" class="text-danger"></span>
            </div>

            
            <div class="col-2">
                <label asp-for="PurchaseOrderDetail.PodUnitPrice" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="PurchaseOrderDetail.PodUnitPrice" class="form-control" />
                <span asp-validation-for="PurchaseOrderDetail.PodUnitPrice" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="PurchaseOrderDetail.PodQty" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="PurchaseOrderDetail.PodQty" class="form-control" />
                <span asp-validation-for="PurchaseOrderDetail.PodQty" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="PurchaseOrderDetail.PodDiscount" class="control-label pt-2" style="font-size:20px;"></label>
            </div>

            <div class="col-10 pb-3">
                <input asp-for="PurchaseOrderDetail.PodDiscount" class="form-control" />
                <span asp-validation-for="PurchaseOrderDetail.PodDiscount" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexPurchaseOrder" asp-controller="PurchaseOrder" class="btn-primary btn form-control">Back To List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Create" class="btn-success form-control" />
            </div>
        </div>
    </div>
</form>


